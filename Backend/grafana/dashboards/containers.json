  "panels": [
    {
      "type": "timeseries",
      "title": "Top 5 CPU (rate 1m)",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        { "expr": "topk(5, sum(rate(container_cpu_usage_seconds_total[1m])) by (name))", "refId": "A" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Top 5 Mem√≥ria",
