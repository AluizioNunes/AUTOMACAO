{
  "id": null,
  "uid": "cmm-overview",
  "title": "CMM - Overview",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "30s",
  "editable": true,
  "panels": [
    {
      "type": "stat",
      "title": "QPS por Serviço",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        { "expr": "sum(rate(http_request_duration_seconds_count[1m])) by (service)", "refId": "A" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "auto" }
    },
    {
      "type": "stat",
      "title": "Erros por Status (5m)",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        { "expr": "sum(rate(http_errors_total[5m])) by (status, service)", "refId": "A" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latência P95 (5m)",
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        { "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, service))", "refId": "A" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Nginx QPS",
      "gridPos": { "x": 12, "y": 6, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        { "expr": "sum(rate(nginx_http_requests_total[1m]))", "refId": "A" }
      ]
    },
    {
      "type": "stat",
      "title": "Conexões Nginx Ativas",
      "gridPos": { "x": 0, "y": 14, "w": 6, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        { "expr": "nginx_connections_active", "refId": "A" }
      ]
    },
    {
      "type": "stat",
      "title": "PostgreSQL Sessões",
      "gridPos": { "x": 6, "y": 14, "w": 6, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        { "expr": "sum(pg_stat_activity_count)", "refId": "A" }
      ]
    },
    {
      "type": "stat",
      "title": "CPU Total Containers (1m)",
      "gridPos": { "x": 12, "y": 14, "w": 6, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        { "expr": "sum(rate(container_cpu_usage_seconds_total[1m]))", "refId": "A" }
      ]
    },
    {
      "type": "stat",
      "title": "Memória Total Containers",
      "gridPos": { "x": 18, "y": 14, "w": 6, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        { "expr": "sum(container_memory_usage_bytes)", "refId": "A" }
      ]
    },
    {
      "type": "logs",
      "title": "Logs Recentes (Loki)",
      "gridPos": { "x": 0, "y": 20, "w": 12, "h": 8 },
      "datasource": { "type": "loki", "uid": "Loki" },
      "targets": [
        { "expr": "{job=~\".+\"}", "refId": "A" }
      ],
      "options": {
        "showTime": true,
        "wrapLogMessage": true,
        "enableLogDetails": true
      }
    },
    {
      "type": "traces",
      "title": "TraceQL Search (Tempo)",
      "gridPos": { "x": 12, "y": 20, "w": 12, "h": 8 },
      "datasource": { "type": "tempo", "uid": "Tempo" },
      "targets": [
        {
          "refId": "A",
          "queryType": "traceqlSearch",
          "query": "{ service.name =~ \".*\" }",
          "datasource": { "type": "tempo", "uid": "Tempo" }
        }
      ],
      "options": {
        "showSearch": true,
        "showTable": true
      }
    }
  ]
}